<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
        {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"> #}
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        <link rel="stylesheet" href="{{ asset('css/cours.css') }}">
        {% endblock %}
        {% block javascripts %}
        {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script> #}
        <script src="{{ asset('js/script.js') }}"></script>
        <script src="{{ asset('js/cours.js') }}"></script>
        {% endblock %}
    </head>
    <body>    
    {% block header %}
        <header>       
        {% block navbar %}
            <nav class="nav"> 
            <div class="header">
                <img src="{{ asset('images/adrar-classrooms-logo.png') }}" alt="Logo" class="logo" />
                <h1>Classrooms</h1>
                <ul class="navbar">
                    <a href="">Accueil</a>
                    <a href="">Formations</a>
                    <a href="">Administration</a>
                </ul>
                <img src="{{ asset('images/magnifying-glass-solid.svg') }}" alt="icon" class="icon" style="cursor: pointer;" />
                <div id="search-container" style="display: none;">
                    <form action="" method="POST">
                        <button type="button" id="search-button">
                            <img src="{{ asset('images/magnifying-glass-solid.svg') }}" alt="icon" class="icon" style='cursor: pointer;' />
                        </button>
                        <input type="text" name="q" placeholder="Recherche..." />
                    </form>
                </div>
                <button type="button" class="login">Se connecter</button>
            </div>
            </nav>
        {% endblock %}
        </header>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %} 
        <div class="footer">
            <p>2023 © ADRAR Classrooms. Tous droits réservés.<p>
            <div class="image-container">
                <img src="{{ asset('images/chevron-up-solid.svg') }}" alt="icon" class="image2" style="filter: invert(1); fill: #ff0000; cursor: pointer;" />
                <img src="{{ asset('images/chevron-up-solid.svg') }}" alt="icon" class="image3" style="filter: invert(1); fill: #ff0000; cursor: pointer;" />
            </div>
        </div>
        {% endblock %}
    </body>
</html>
