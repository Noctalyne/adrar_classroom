{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ cour.titre }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ cour.synopsis }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ cour.niveau }}</td>
            </tr>
            <tr>
                <th>TempsEstime</th>
                <td>{{ cour.tempsEstime }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ cour.image }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ cour.date }}</td>
            </tr>
            <tr>
                <th>Cree</th>
                <td>{{ cour.cree }}</td>
            </tr>
            <tr>
                <th>Chapitres :</th>
                <td>
                {% for chapitre in cour.chapitres %}
                <div>{{ chapitre.titre }}</div>
                {% endfor %}
                </td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_edit_cours_index') }}">back to list</a>

    <a href="{{ path('app_edit_cours_edit', {'id': cour.id}) }}">edit</a>

    {{ include('edit_cours/_delete_form.html.twig') }}
{% endblock %}
